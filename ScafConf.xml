<?xml version="1.0" encoding="UTF-8"?>
<scaffold>
<!--The input file for scaffolding, including contigs and aligned files (i.e. m5, sam or bam file) -->
	<input>
		<contig>PATH_TO_CONTIGS_FILE</contig>
		<m5>PATH_TO_BLASR_OR_MINIMAP_ALIGNED_OUTPUT</m5>
		<pbread></pbread>
	</input>
	<!-- The output folder for scaffolding -->
	<output>PATH_TO_OUTPUT</output>
	<!-- the parameters for scaffolding-->
	<paras>
		 <!--The minimum contig length to be used in scaffolding-->
         <min_contig_length>1000</min_contig_length>
         <min_pacbio_length>3000</min_pacbio_length>
		 <identity>0.8</identity>
         <min_overlap_length>500</min_overlap_length>
         <min_overlap_ratio>0.3</min_overlap_ratio>
         <max_overhang_length>3000</max_overhang_length>
         <max_overhang_ratio>0.8</max_overhang_ratio>
         <max_end_length>1000</max_end_length>
         <max_end_ratio>0.5</max_end_ratio>
         <min_supported_links>2</min_supported_links>
		 <tips_length>1500</tips_length>
		 <use_overlap_link>true</use_overlap_link>
		 <ratio>0.1</ratio>
		 <repeat_mask>true</repeat_mask>
		 <iqr_time>1.5</iqr_time>
		 <mmcm>8</mmcm>
	</paras>
</scaffold>